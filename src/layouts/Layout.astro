---
import Topbar from '../components/Topbar';

export interface Props {
	title: string;
	showTopbar?: boolean;
}

const { title, showTopbar = true } = Astro.props;

// Get user from middleware (will be null if not authenticated)
const user = Astro.locals.user;
---

<!doctype html>
<html lang="pl">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="10xCards - AI-powered flashcard generator" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-gray-50">
		{showTopbar && <Topbar client:load user={user} />}
		<slot />
		<style>
			@import "../styles/globals.css";
		</style>
	</body>
</html>
