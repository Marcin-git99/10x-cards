---
import Layout from '../../layouts/Layout.astro';
import AuthLayout from '../../components/auth/AuthLayout';
import ResetPasswordWrapper from '../../components/auth/ResetPasswordWrapper';

// If user is already logged in, redirect to home page
const user = Astro.locals.user;
if (user) {
  return Astro.redirect('/');
}
---

<Layout title="Resetowanie hasła - 10x Cards" showTopbar={false}>
  <div class="flex flex-col min-h-screen bg-gray-50">
    <main class="flex-grow">
      <AuthLayout client:load title="Resetowanie hasła" subtitle="Ustaw nowe hasło lub poproś o link do resetowania">
        <ResetPasswordWrapper client:load />
      </AuthLayout>
    </main>
  </div>
</Layout>

